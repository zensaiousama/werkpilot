generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Lead {
  id              String   @id @default(cuid())
  firma           String
  kontakt         String?
  email           String?
  telefon         String?
  website         String?
  adresse         String?
  branche         String
  kanton          String
  ort             String
  status          String   @default("New Lead")
  leadScore       Int      @default(0)
  fitnessScore    Int      @default(0)
  umsatzpotenzial Int      @default(2000)
  googleRating    Float?
  googleReviews   Int?
  notizen         String?
  quelle          String?
  letzterKontakt  DateTime?
  assignedAgent   String?
  priority        Int      @default(0)
  lastActivityAt  DateTime?
  tags            String   @default("")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  activities      Activity[]

  @@index([status])
  @@index([branche])
  @@index([kanton])
  @@index([leadScore])
  @@index([createdAt])
  @@index([email])
  @@index([status, branche])
  @@index([status, kanton])
}

model Activity {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  type      String
  details   String?
  createdAt DateTime @default(now())

  @@index([leadId])
  @@index([createdAt])
  @@index([type])
}

model Agent {
  id          String   @id @default(cuid())
  name        String
  dept        String
  status      String   @default("idle")
  score       Int      @default(0)
  tasksToday  Int      @default(0)
  errorsToday Int      @default(0)
  lastRun     DateTime?
  config      String?
  logs        AgentLog[]
  executions  AgentExecution[]

  @@index([dept])
  @@index([status])
  @@index([name])
  @@unique([name])
}

model AgentLog {
  id        String   @id @default(cuid())
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  level     String
  message   String
  createdAt DateTime @default(now())

  @@index([agentId])
  @@index([level])
  @@index([createdAt])
  @@index([agentId, createdAt])
}

model NightShiftTask {
  id          String    @id @default(cuid())
  task        String
  priority    Int       @default(1)
  status      String    @default("pending")
  startedAt   DateTime?
  completedAt DateTime?
  output      String?
  durationMs  Int?
  tokensUsed  Int       @default(0)
  agentName   String?
  createdAt   DateTime  @default(now())

  @@index([status])
  @@index([priority])
  @@index([createdAt])
}

model Decision {
  id             String  @id @default(cuid())
  title          String
  context        String
  options        String
  recommendation String?
  chosen         String?
  status         String  @default("pending")
  createdAt      DateTime @default(now())

  @@index([status])
  @@index([createdAt])
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  type      String   @default("info")
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  @@index([read])
  @@index([createdAt])
}

model AgentExecution {
  id          String   @id @default(cuid())
  agentId     String
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  startedAt   DateTime
  completedAt DateTime?
  durationMs  Int?
  status      String
  errorMessage String?
  tokensUsed  Int      @default(0)
  model       String?
  createdAt   DateTime @default(now())

  @@index([agentId, startedAt])
  @@index([status])
}

model Webhook {
  id            String   @id @default(cuid())
  name          String
  url           String
  events        String
  secret        String?
  active        Boolean  @default(true)
  lastTriggered DateTime?
  failCount     Int      @default(0)
  createdAt     DateTime @default(now())

  @@index([active])
  @@index([events])
}

// ============================
// MAILING SYSTEM
// ============================

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String
  subject   String
  body      String
  category  String   @default("general")
  variables String   @default("[]")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  campaigns Campaign[]

  @@index([category])
  @@index([active])
}

model Campaign {
  id           String    @id @default(cuid())
  name         String
  templateId   String?
  template     EmailTemplate? @relation(fields: [templateId], references: [id])
  status       String    @default("draft")
  recipients   String    @default("[]")
  sentCount    Int       @default(0)
  openCount    Int       @default(0)
  clickCount   Int       @default(0)
  bounceCount  Int       @default(0)
  scheduledAt  DateTime?
  sentAt       DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  emails       EmailLog[]

  @@index([status])
  @@index([createdAt])
}

model EmailLog {
  id          String    @id @default(cuid())
  campaignId  String?
  campaign    Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  leadId      String?
  to          String
  subject     String
  status      String    @default("queued")
  openedAt    DateTime?
  clickedAt   DateTime?
  bouncedAt   DateTime?
  error       String?
  createdAt   DateTime  @default(now())

  @@index([campaignId])
  @@index([leadId])
  @@index([status])
  @@index([createdAt])
}

// ============================
// FINANCE SYSTEM
// ============================

model Invoice {
  id            String    @id @default(cuid())
  invoiceNumber String    @unique
  leadId        String?
  clientName    String
  clientEmail   String?
  clientAddress String?
  items         String    @default("[]")
  subtotal      Float     @default(0)
  vatRate       Float     @default(8.1)
  vatAmount     Float     @default(0)
  total         Float     @default(0)
  currency      String    @default("CHF")
  status        String    @default("draft")
  dueDate       DateTime?
  paidAt        DateTime?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  payments      Payment[]

  @@index([status])
  @@index([leadId])
  @@index([createdAt])
  @@index([dueDate])
}

model Payment {
  id          String   @id @default(cuid())
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  amount      Float
  method      String   @default("bank_transfer")
  reference   String?
  notes       String?
  paidAt      DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([invoiceId])
  @@index([paidAt])
}

model Expense {
  id          String   @id @default(cuid())
  description String
  category    String
  amount      Float
  currency    String   @default("CHF")
  date        DateTime
  recurring   Boolean  @default(false)
  notes       String?
  createdAt   DateTime @default(now())

  @@index([category])
  @@index([date])
}

// ============================
// FOLLOW-UP SYSTEM
// ============================

model FollowUp {
  id          String    @id @default(cuid())
  leadId      String
  type        String    @default("email")
  subject     String
  message     String?
  status      String    @default("pending")
  priority    Int       @default(1)
  dueDate     DateTime
  completedAt DateTime?
  assignedTo  String?
  sequence    String?
  stepNumber  Int       @default(1)
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([leadId])
  @@index([status])
  @@index([dueDate])
  @@index([priority])
  @@index([status, dueDate])
}

model FollowUpSequence {
  id          String   @id @default(cuid())
  name        String
  description String?
  steps       String   @default("[]")
  trigger     String   @default("manual")
  active      Boolean  @default(true)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([active])
  @@index([trigger])
}
